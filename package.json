{
  "name": "@piber/rollup-js",
  "version": "0.1.0",
  "description": "Starter template for building JS libraries using Rollup",
  "keywords": [
    "rollup",
    "javascript",
    "library",
    "esm"
  ],
  "license": "MIT",
  "author": "Maurício Piber Fão (https://github.com/mauriciopiber)",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/esm/src/index.js",
      "require": "./dist/cjs/src/index.js"
    }
  },
  "main": "./dist/cjs/src/index.js",
  "module": "./dist/esm/src/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "npm run build:esm && npm run build:cjs",
    "build-storybook": "storybook build",
    "build:cjs": "rollup -c rollup.config.cjs.mjs",
    "build:esm": "rollup -c rollup.config.esm.mjs",
    "format": "prettier --write src",
    "lint": "eslint --ignore-path .gitignore --fix src",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006"
  },
  "dependencies": {
    "@babel/runtime": "^7.25.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.40"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.6.1",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@storybook/addon-essentials": "^8.2.6",
    "@storybook/addon-interactions": "^8.2.6",
    "@storybook/addon-links": "^8.2.6",
    "@storybook/addon-onboarding": "^8.2.6",
    "@storybook/blocks": "^8.2.6",
    "@storybook/react": "^8.2.6",
    "@storybook/react-vite": "^8.2.6",
    "@storybook/test": "^8.2.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "husky": "^9.1.3",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "prop-types": "^15.8.1",
    "rollup": "^4.19.1",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-preserve-directives": "^0.4.0",
    "storybook": "^8.2.6",
    "tailwindcss": "^3.4.7"
  },
  "peerDependencies": {
    "react": "^16.14.0 || ^17.0.0 || ^18.2.0",
    "react-dom": "^16.14.0 || ^17.0.0 || ^18.2.0"
  },
  "engines": {
    "node": ">=16.0.0 || >=18.0.0 || >=19.0.0 || >=20.0.0"
  },
  "overrides": {
    "rollup-plugin-preserve-directives": {
      "rollup": "^4.7.0"
    }
  }
}
